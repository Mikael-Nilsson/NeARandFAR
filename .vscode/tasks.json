{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}\\NeARandFARBackEnd"
			]
		},
		{
			"label": "package",
			"command": "dotnet",
			"type": "process",
			"args": [
				"lambda",
				"package",
				"-pl",
				"${workspaceFolder}\\NeARandFARBackEnd",
				"--configuration",
				"Release",
				"--framework",
				"netcoreapp3.1",
				"--output-package",
				"bin/Release/netcoreapp3.1/nearandfarbackend.zip"
			]
		},
		{
			"label": "deploy",
			"type": "shell",
			"command": "serverless deploy",
			"options": {
				"cwd": "${workspaceFolder}/NeARandFARBackEnd"
			},
			"problemMatcher": []
		}
	]
}